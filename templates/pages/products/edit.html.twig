{% extends "base.html.twig" %}

{% block title %}Productos
{% endblock %}

{% block body %}
	<div class="content-header row">
		<div class="content-header-left col-md-9 col-12 mb-2">
			<div class="row breadcrumbs-top">
				<div class="col-12">
					<h2 class="content-header-title float-left mb-0">Editar producto</h2>
					
				</div>
			</div>
		</div>
	</div>
	<div class="content-body">
		<div class="row" id="basic-table">
			<div class="col-12">
				<div class="row col-12">
					<a href="{{ path('products.index') }}"><button type="button" class="btn btn-flat-dark border-dark text-dark mr-1 mb-1 waves-effect waves-light"><span><i class="feather icon-x-circle "></i> Cancelar </span></button></a>
				</div>
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Editar Registro</h4>
					</div>
					<div class="card-content">
						<div class="card-body">
							<p class="card-text">Actualizar un registro para mostrar en el sistema.</p>
								<div class="">

									{{ form_start(form) }}

									<div class="form-group" type="text" onkeypress="return onlyl(event)">
										{{ form_label(form.name) }}
										{{ form_widget(form.name) }}
										<div class="form-error">
											{{ form_errors(form.name) }}
										</div>
									</div>

									<div class="form-group">
										{{ form_label(form.code) }}
										{{ form_widget(form.code) }}
										<div class="form-error">
											{{ form_errors(form.code) }}
										</div>
									</div>

									<div class="form-group">
										{{ form_label(form.descripcion) }}
										{{ form_widget(form.descripcion) }}
										<div class="form-error">
											{{ form_errors(form.descripcion) }}
										</div>
									</div>

									<div class="form-group">
										{{ form_label(form.brand) }}
										{{ form_widget(form.brand) }}
										<div class="form-error">
											{{ form_errors(form.brand) }}
										</div>
									</div>

									<div class="form-group" type="text" onkeypress="return onlyn(event)" onblur="limpia()" id="miInput">
										{{ form_label(form.price) }}
										{{ form_widget(form.price) }}
										<div class="form-error">
											{{ form_errors(form.price) }}
										</div>
									</div>

									{{ form_label(form.category) }}
									<br>
									<div id="produc">
										{% for field in form.category %}
											<div style="min-width: 10%;">
												{{ form_widget(field) }}
												{{ form_label(field) }}
											</div>
										{% endfor %}
									</div>

									<div class="form-group">
										{{ form_row(form.submit) }}
									</div>

								</div>
								{{ form_end(form) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- {# Inicio de Scrip solo para letras #} -->
		<script>
			function onlyl(a){
				key = a.keyCode || e.which;
				tecla = String.fromCharCode(key).toLowerCase();
				letras = " áéíóúabcdefghijklmnñopqrstuvwxyz";
				numbern = "8-37-39-46";

				tecla_esp = false
				for(var i in numbern){
						if(key == numbern[i]){
							tecla_esp = true;
							break;
						}
					}

					if(letras.indexOf(tecla)==-1 && !tecla_esp){
						return false;
				}
			}
		</script>
	<!-- {# Fin de Scrip solo para letras #} -->

	<!-- {# Inicio de Scrip solo para numeros #} -->
		<script>
			function onlyn(a) {
				key = a.keyCode || a.which;
				tecla = String.fromCharCode(key).toLowerCase();
				num = " 0123456789";
				numbern = [8, 37, 39, 46];

				tecla_esp = false
				for(var i in numbern) {
					if(key == numbern[i]) {
						tecla_esp = true;
						break;
					}
				}

				if(num.indexOf(tecla) == -1 && !tecla_esp)
					return false;
			}

			function limpia() {
				var val = document.getElementById("miInput").value;
				var tam = val.length;
				for(i = 0; i < tam; i++) {
					if(!isNaN(val[i]))
						document.getElementById("miInput").value = '';
				}
			}
		</script>
	<!-- {# Fin de Scrip solo para numeros #} -->

{% endblock %}