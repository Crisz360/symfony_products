{% extends "base.html.twig" %}

{% block title %}Productos
{% endblock %}

{% block body %}
	<div class="content-header row">
		<div class="content-header-left col-md-9 col-12 mb-2">
			<div class="row breadcrumbs-top">
				<div class="col-12">
					<h2 class="content-header-title float-left mb-0">Editar producto</h2>
					
				</div>
			</div>
		</div>
	</div>
	<div class="content-body">
		<!-- Basic Tables start -->
		<div class="row" id="basic-table">
			<div class="col-12">
				<div class="row col-12">
					<a href="{{ path('products.index') }}"><button type="button" class="btn btn-flat-dark border-dark text-dark mr-1 mb-1 waves-effect waves-light"><span><i class="feather icon-x-circle "></i> Cancelar </span></button></a>
				</div>
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Editar Registro</h4>
					</div>
					<div class="card-content">
						<div class="card-body">
							<p class="card-text">Actualizar un registro para mostrar en el sistema.</p>
								<div class="">

									{{ form_start(form) }}

									<div class="form-group">
										{{ form_label(form.name) }}
										{{ form_widget(form.name) }}
										<div class="form-error">
											{{ form_errors(form.name) }}
										</div>
									</div>

									<div class="form-group">
										{{ form_label(form.code) }}
										{{ form_widget(form.code) }}
										<div class="form-error">
											{{ form_errors(form.code) }}
										</div>
									</div>

									<div class="form-group">
										{{ form_label(form.descripcion) }}
										{{ form_widget(form.descripcion) }}
										<div class="form-error">
											{{ form_errors(form.descripcion) }}
										</div>
									</div>

									<div class="form-group">
										{{ form_label(form.brand) }}
										{{ form_widget(form.brand) }}
										<div class="form-error">
											{{ form_errors(form.brand) }}
										</div>
									</div>

									<div class="form-group">
										{{ form_label(form.price) }}
										{{ form_widget(form.price) }}
										<div class="form-error">
											{{ form_errors(form.price) }}
										</div>
									</div>

									{{ form_label(form.category) }}
									<br>
									<div id="ingredients-wrapper">
										{% for field in form.category %}
											<div style="min-width: 10%;">
												{{ form_widget(field) }}
												{{ form_label(field) }}
											</div>
										{% endfor %}
									</div>

									<div class="form-group">
										{{ form_row(form.submit) }}
									</div>

								</div>
								{{ form_end(form) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Basic Tables end -->
	</div>
{% endblock %}